{
    "name": "mnesis",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "dev": "bun run --workspaces dev",
        "build": "bun run --workspaces build",
        "prod": "bun run --workspaces prod",
        "build-servers": "bun run --filter './packages/{server,tools}' build",
        "prod-servers": "bun run --filter './packages/{server,tools}' prod",
        "docker:build": "docker-compose build",
        "docker:run": "docker-compose up",
        "docker:down": "docker-compose down",
        "docker:run:d": "docker-compose up -d"
    }
}
